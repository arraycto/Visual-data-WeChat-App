/* components/menu/menu.wxss */
.van-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
  background-color: var(--overlay-background-color, rgba(0, 0, 0, .7));
  z-index: 10000;
}


.sidebarClass {
  width: 100% !important;
  text-align: center;
}

.menuClass {
  position: fixed;
  /*相对定位*/
  height: 90rpx;
  width: 90rpx;
  border-radius: 100%;
  color: white;
  text-align: center;
  line-height: 76rpx;
  right: 30rpx;
  bottom: 40rpx;
  background: #3B8AD9;
  font-size: 56rpx;
}

.sidebar {
  width: 40%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  background-color: #fff;
  z-index: 10001;
}

.sidebarList {
  width: 100%;
  display: block;
  box-sizing: border-box;
  overflow: hidden;
  word-wrap: break-word;
  user-select: none;
  padding: 20px 12px 20px 8px;
  font-size: 14px;
  line-height: 20px;
  color: #323233;
  background-color: #fafafa;
  text-align: center;
  position: relative;
}

.sidebarList_check {
  color: #323233;
  font-weight: 500;
  background-color: #ffffff;
}

.borderLeft {
  width: 10rpx;
  position: absolute;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #45A2E8;
}

.borderLeftNo {
  width: 10rpx;
  position: absolute;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #fafafa;
}
.bottom{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 60rpx;
  font-size: 14px;
  line-height: 20px;
  color: #45A2E8;
  text-align: center;
}