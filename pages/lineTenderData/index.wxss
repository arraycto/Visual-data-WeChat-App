/* pages/index/index.wxss */

.index {
  width: 100%;
}

.shadow-warp {
  position: relative;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.shadow-warp:before, .shadow-warp:after {
  position: absolute;
  content: "";
  top: 20rpx;
  bottom: 30rpx;
  left: 20rpx;
  width: 50%;
  box-shadow: 0 30rpx 20rpx rgba(0, 0, 0, 0.2);
  transform: rotate(-3deg);
  z-index: -1;
}

.login{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  text-align: center;
  overflow: hidden;
}

.shadow-warp:after {
  right: 20rpx;
  transform: rotate(3deg);
}

.titleColor {
  width: 100%;
  text-align: center;
  font-weight: bold;
  font-size: 16px;
}

.cu-custom {
  width: 100%;
  position: fixed;
  z-index: 2000;
  top: 0;
}

.tabBox {
  width: 100%;
}

.cu-custom .cu-bar {
  padding-right: 0;
}

.titleColor {
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
}

.van-hairline--top-bottom::after {
  border-top: none !important;
}

.van-tabs__line {
  background-color: #0081ff !important;
}

.UCenter-bg {
  background: linear-gradient(45deg, #0081ff, #1cbbb4);
  background-size: cover;
  height: 220rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  top: 0;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 2000;
  mix-blend-mode: screen;
  height: 100rpx;
}

.bgColor {
  background: #3490a7;
}

.narLine {
  width: 70%;
  height: 8rpx;
  background-color: #45A2E8;
  position: relative;
  bottom:4rpx;
  left:0;
  right:0;
  margin: auto;
}

.narBoxBottom{
  width: 100%;
  height: 3rpx;
  background-color:#F2F2F2;
  position: relative;
  bottom:0rpx;
  left:0;
  right:0;
