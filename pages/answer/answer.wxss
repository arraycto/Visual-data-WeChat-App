/* pages/answer/answer.wxss */
.flex{
  display: flex;
}
.flex-1{
  flex:1;
}
.flex-align-center{
  align-items: center;
}
.answer{
  padding-top: 78rpx;
  padding-bottom: 98rpx;
}
.answer-type{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 24rpx;
  z-index: 10;
}
.answer-no{
  padding-left: 44rpx;
  color: #EB3303;
  background: #FFDEC9;
}
.answer-yes{
  padding-left: 44rpx;
  padding-right: 40rpx;
  display: flex;
  color: #4A90E2;
  background: #DAEAFD;
}
.answer-lt{
  flex: 1;
}
.answer-tit{
  margin-bottom: 36rpx;
  padding: 0 50rpx;
  font-size: 28rpx;
  color: #4A4A4A;
}
.answer-tit>view{
  height: 90rpx;
  line-height: 90rpx;
}
.answer-tit-item{
  border-bottom: 1px solid #4A90E2;
}
.answer-tit-rt{
  position: relative;
  text-indent: 35rpx;
}
.answer-tit-rt::before{
  content:"";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -23rpx;
  height: 47rpx;
  border-left: 1px solid #4A90E2;
}
.content{
  padding: 0 40rpx;
}
.list-top{
  margin-bottom: 14rpx;
  justify-content: space-between;
}
.list-top .tip{
  /* width: 94rpx; */
  padding: 0 22rpx;
  height: 50rpx;
  line-height:50rpx;
  font-size: 26rpx;
  font-weight: bold;
  text-align: center;
  background: #4A90E2;
  color: #fff;
}
.list-top .text{
  padding-right: 12rpx;
  font-size: 26rpx;
  line-height:50rpx;
  color: #FFB400;
}
/* 展开组件 */
.list{
  margin-bottom: 38rpx;
}
.list-ct{
  margin-bottom: 32rpx;
}
.list-ct .title{
  font-size: 28rpx;
  color: #4A90E2;
}
.van-cell{
  padding: 0 40rpx 0 20rpx;
  background-color: #F7F6F6!important;
  border: 1px solid #D8D8D8;
  border-radius: 10rpx;
}
.van-collapse-item__wrapper {
  margin-top: -14rpx;
  border: 1px solid #D8D8D8;
  border-radius: 10rpx;
}
.van-collapse-item__content{
  padding: 37rpx 20rpx 30rpx;
  background: rgba(247,246,246,0.39);
  border-radius: 10rpx;
  line-height: 32rpx;
  text-indent: 2em;
  font-size: 24rpx;
  color: #656565;
}
/* 拖拽 */
.slider-ct{
  margin-left: 20rpx;
  align-items: flex-start;
}
.slider-ct .input{
  height: 92rpx;
  line-height: 92rpx;
  border: 1px solid #4A90E2;
  padding: 0 8rpx;
  font-size: 36rpx;
  color: #4A4A4A;
  width: 100rpx;
  text-align: center;
  background-color: #fff;
}
.slider-ct .input[disabled]{
  background: #F7F6F6;
  border-color: #D8D8D8;
}
/* footer */
.footer{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  z-index: 10;
}
.gray-btn{
  color: #838383;
  background: #D8D8D8;
}
.blue-btn{
  color: #FFFFFF;
  background: #4A90E2;
}
/* 弹窗 */
.dialog-scroll{
  height: 600rpx;
  padding: 40rpx;
}
.dialog-tit{
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #838383;
}
.dialog-list{
  margin-bottom: 15rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: justify;
}